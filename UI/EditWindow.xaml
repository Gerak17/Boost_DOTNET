<Window x:Class="wpfdotnet.UI.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter / Modifier une Å“uvre" Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Titre"/>
            <TextBox x:Name="TitleBox" Margin="0,0,0,10"/>

            <Label Content="Artiste"/>
            <TextBox x:Name="ArtistBox" Margin="0,0,0,10"/>

            <Label Content="Description"/>
            <TextBox x:Name="DescriptionBox" Margin="0,0,0,10"/>

            <Label Content="URL de l'image"/>
            <TextBox x:Name="ImageUrlBox" Margin="0,0,0,10"/>

            <Button x:Name="SaveButton" Content="Enregistrer" Click="Save_Click" HorizontalAlignment="Center" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
